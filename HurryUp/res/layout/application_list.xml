<?xml version="1.0" encoding="utf-8"?>
<!-- 自定义布局文件 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <ImageView
          android:id="@+id/application_img"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_margin="5dip"     
          />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
       <RelativeLayout android:id="@+id/application_RelativeLayout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginLeft="10.0px"
			android:layout_marginTop="7px" android:layout_marginRight="10.0px">
			<TextView android:id="@+id/application_nick"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentTop="true"
			    android:text="用户名："
			    android:textSize="16sp"/>
			<TextView android:id="@+id/application_nickname"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignBottom="@+id/application_nick"
		        android:layout_toRightOf="@+id/application_nick" 
			    android:textSize="12sp"/>

			<TextView android:id="@+id/application_distance"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="7dp"
			    android:layout_below="@+id/application_nickname"
			    android:text="距离："
			    android:textSize="16sp"/>
			
			<TextView android:id="@+id/application_distance_value"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		          android:layout_alignBottom="@+id/application_distance"
		          android:layout_toRightOf="@+id/application_distance"  
			    android:textSize="12sp"/>
			
			<TextView android:id="@+id/application_time"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="7dp"
			    android:layout_below="@+id/application_distance"
			    android:text="申请时间："
			    android:textSize="16sp"/>
			
			<TextView android:id="@+id/application_time_value"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		          android:layout_alignBottom="@+id/application_time"
		          android:layout_toRightOf="@+id/application_time"  
			    android:textSize="12sp"/>
			<Button android:id="@+id/application_accept"
	           android:layout_width="60dp"
	           android:layout_height="40dp"
	           android:layout_alignParentRight="true"
	           android:layout_alignParentTop="true"
	           android:textSize="12sp"
	           android:text="接受"></Button>
	       <Button android:id="@+id/application_refuse"
	           android:layout_width="60dp"
	           android:layout_height="40dp"
	           android:layout_alignParentRight="true"
	           android:layout_below="@+id/application_accept"
	            android:textSize="12sp"
	           android:text="拒绝"></Button>
		</RelativeLayout>

    </LinearLayout>
     
</LinearLayout>