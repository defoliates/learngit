<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical" android:id="@+id/loginRoot"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout android:orientation="vertical" 
		android:id="@+id/mLinearLayout"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1.0">
		<ImageView android:id="@+id/logoImg" android:background="@drawable/login"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
		<RelativeLayout android:id="@+id/RelativeLayout02"
						android:paddingTop="21.0px"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginLeft="15.0px"
			android:layout_marginTop="62.0px" android:layout_marginRight="15.0px">
			<EditText android:id="@+id/edtuser"
				android:paddingLeft="45.0sp"
				android:saveEnabled="true" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_marginLeft="25.0dip"
				android:layout_marginTop="5.0dip" android:layout_marginRight="25.0dip"
				android:layout_marginBottom="5.0px" android:hint="请输入用户名"
				android:maxLength="10" 
				android:layout_alignParentTop="true" 
				/>
			<ImageView android:src="@drawable/user"
				android:gravity="center_vertical" android:id="@+id/TextView01"
				android:paddingLeft="7.0sp" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginRight="15.0sp"
				android:layout_alignLeft="@+id/edtuser"
				android:layout_alignTop="@+id/edtuser"
				android:layout_alignBottom="@+id/edtuser" />
			<EditText android:id="@+id/edtpsd"
				android:paddingLeft="45.0sp"
				android:saveEnabled="true" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginRight="1.0dip"
				android:maxLength="16" android:layout_below="@+id/edtuser"
				android:layout_alignLeft="@+id/edtuser"
				android:layout_alignRight="@+id/edtuser"
				android:hint="请输入密码"
				android:inputType="textPassword" />
			<ImageView android:src="@drawable/key"
				android:gravity="center_vertical" android:id="@+id/TextView02"
				android:paddingLeft="7.0sp" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="bad"
				android:layout_alignTop="@+id/edtpsd"
				android:layout_alignRight="@+id/TextView01"
				android:layout_alignBottom="@+id/edtpsd" />
			<CheckBox android:textSize="12.0sp" android:textColor="#ff222222"
				android:id="@+id/rememberpsd" 
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:checked="true" android:layout_alignLeft="@+id/edtuser"
				android:text="记住密码" android:layout_alignBaseline="@+id/signUp" />
			<TextView 
            	  android:id="@+id/signUp"
            	  android:layout_width="260.0px"
				  android:layout_height="42.0px" android:layout_marginTop="7.0px"
                  android:layout_marginRight="12.0dip"
                  android:layout_below="@+id/TextView02"
				  android:layout_alignParentRight="true"
				  android:textSize="12sp"
                  android:text="No access? Sign Up"/>
			<Button android:id="@+id/loginbtn" android:layout_width="360.0px"
				android:layout_height="96.0px" android:layout_marginTop="200.0px"
				android:layout_marginRight="12.0dip" android:text="登陆"
				android:layout_below="@+id/signUp"
				android:background="@drawable/btn_bg" 
				android:layout_centerHorizontal="true" />
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>