<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
   
    <RelativeLayout android:id="@+id/orderRelativeLayout"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:background="#E6E6E6"
			>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="370px"
        android:background="@drawable/background3"></LinearLayout>
	<TextView android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="70px"
	    android:layout_marginTop="20px"
	    android:layout_alignParentTop="true"
	    android:text="返回"
	    android:textColor="#FFFFFF"
	    android:textSize="20sp"
	    android:id="@+id/order_back"/>
	
	<ImageView android:layout_width="200px"
	    android:layout_height="200px"
	    android:src="@drawable/center_img1"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="140dp"
	    android:id="@+id/orderImg"/>
	<ListView android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_below="@+id/orderImg"
		android:layout_marginLeft="40px"
		android:layout_marginRight="40px"
		android:layout_marginTop="20px"
		android:dividerHeight="20px"
		android:divider="#E6E6E6" 
		android:id="@+id/users">
	</ListView>
			</RelativeLayout>

</LinearLayout>
