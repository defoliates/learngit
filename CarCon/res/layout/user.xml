<?xml version="1.0" encoding="utf-8"?>
<!-- 自定义布局文件 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="129px"
    android:background="@drawable/list_bg"
    >
    <ImageView
          android:id="@+id/custom_img"
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="-20px"    
          />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="129px">
       <RelativeLayout android:id="@+id/listRelativeLayout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			>
			<TextView android:id="@+id/list_flag"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:visibility="invisible"/>
			<TextView android:id="@+id/list_shop"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentTop="true"
			    android:maxLength="12"
			    android:layout_marginTop="10px"
			    android:textSize="20sp"/>
			<TextView android:id="@+id/list_tel"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_below="@+id/list_shop"
			    android:layout_alignLeft="@+id/list_shop"
			    android:textSize="16sp"/>
			
			<ImageView
		          android:id="@+id/list_comment"
		          android:layout_width="56px"
		          android:layout_height="98px"
		          android:layout_alignParentTop="true"
		          android:layout_alignParentRight="true"
		          android:layout_marginTop="35px"
		          android:layout_marginRight="35px"  
		          />
		</RelativeLayout>
    </LinearLayout>
</LinearLayout>