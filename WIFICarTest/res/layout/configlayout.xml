<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
   <TextView
        android:id="@+id/videoAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="视频地址" />

    <EditText
        android:id="@+id/videoAdressSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
		android:text="192.168.1.20" >
        
    </EditText>
  <TextView
        android:id="@+id/controlAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="控制地址" />

    <EditText
        android:id="@+id/Controlsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
		android:text="192.168.1.20" >
        
    </EditText>

    <TextView
        android:id="@+id/port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="端口" />


    <EditText
        android:id="@+id/Controlport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2001" />
    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/networksave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存" />

            <Button
                android:id="@+id/networkcancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消" />
        </TableRow>
    </TableLayout>
</LinearLayout>
