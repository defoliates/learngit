<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent" android:layout_width="match_parent" android:weightSum="1">
   			 <RelativeLayout android:gravity="right" android:id="@+id/relativeLayout2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="50dp">
            <RadioGroup android:id="@+id/radioGroup1" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:checked="true" android:id="@+id/characterControl" android:layout_height="wrap_content" android:text="单字符控制"></RadioButton>
                <RadioButton android:layout_width="wrap_content" android:id="@+id/instructedControl" android:layout_height="wrap_content" android:text="Hex指令控制"></RadioButton>
             </RadioGroup>
                 <com.wificar.wenjorin.MySurfaceView2
        		android:id="@+id/MySurfaceView2"        		
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_below="@+id/setup">
        		</com.wificar.wenjorin.MySurfaceView2>
                
                <com.wificar.wenjorin.MySurfaceView
        		android:id="@+id/MySurfaceView"        		
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_below="@+id/MySurfaceView2">
        		</com.wificar.wenjorin.MySurfaceView>
                <Button android:layout_width="wrap_content" android:text="设置" android:id="@+id/setup" android:layout_height="wrap_content" android:layout_below="@+id/engineup1" android:layout_alignParentLeft="true" android:layout_marginTop="15dp"></Button>
                <Button android:layout_width="wrap_content" android:text="舵机上" android:id="@+id/engineup1" android:layout_height="wrap_content" android:layout_below="@+id/radioGroup1" android:layout_alignParentLeft="true"></Button>
                <Button android:layout_width="wrap_content" android:text="舵机下" android:id="@+id/enginedown1" android:layout_height="wrap_content" android:layout_above="@+id/setup" android:layout_toRightOf="@+id/engineup1" android:layout_marginLeft="26dp"></Button>
                <CheckBox android:layout_width="wrap_content" android:text="重力感应" android:id="@+id/gravityTouch" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/enginedown1" android:layout_marginLeft="31dp"></CheckBox>
                </RelativeLayout>     
</LinearLayout>
