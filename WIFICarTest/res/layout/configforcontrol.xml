<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
      <TableLayout
        android:id="@+id/tableLayoutConfigControl1"           
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
                android:id="@+id/textview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="舵机速度控制"
                android:gravity="center"  
                android:layout_marginBottom="10dp"              
                android:textAppearance="?android:attr/textAppearanceMedium" />	
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上："
                android:textAppearance="?android:attr/textAppearanceMedium" />
			 <EditText
		        android:id="@+id/engineup"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"		       
		        android:minWidth="50dp"
		        android:text="0" />
		       
            <TextView
                android:id="@+id/textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="下："
                android:textAppearance="?android:attr/textAppearanceLarge" />
			 <EditText
		        android:id="@+id/enginedown"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"		        
		        android:text="0" />
        </TableRow>
        <TextView
                android:id="@+id/textview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="速度控制"
                android:gravity="center"   
                android:layout_marginBottom="10dp"            
                android:textAppearance="?android:attr/textAppearanceMedium" />	
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上："
                android:textAppearance="?android:attr/textAppearanceMedium" />
			 <EditText
		        android:id="@+id/up"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:minWidth="50dp"				       
		        android:text="0" />
		
            <TextView
                android:id="@+id/textview5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="下："
                android:textAppearance="?android:attr/textAppearanceLarge" />
			 <EditText
		        android:id="@+id/down"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"		        
		        android:text="0" />
		  </TableRow>
		  <TableRow >
		     <TextView
                android:id="@+id/textview56"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左："
                android:textAppearance="?android:attr/textAppearanceLarge" />
			 <EditText
		        android:id="@+id/left"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"		        		        
		        android:text="0" />

		        <TextView
                android:id="@+id/textview7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="右："
                android:textAppearance="?android:attr/textAppearanceLarge" />
			 <EditText
		        android:id="@+id/right"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:minWidth="50dp"
		        android:layout_marginBottom="10dp"		        
		        android:text="0" />
        </TableRow>    
        <RelativeLayout >
        	 <TextView
                android:id="@+id/textview8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止："
                android:layout_alignParentTop="true" 
                android:layout_below="@+id/right"
                android:textAppearance="?android:attr/textAppearanceLarge" />
			 <EditText
		        android:id="@+id/pause"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:minWidth="50dp"
		        android:layout_toRightOf="@+id/textview8"	 
		        android:layout_marginRight="80dp"       
		        android:text="0" />
		      <Button android:id="@+id/controlsave" android:text="保存" 
		      		  android:layout_below="@+id/pause"		      		  
		      		 
		      		  android:layout_marginRight="10dp"
		      		  android:layout_width="wrap_content"
		      		  android:layout_height="wrap_content"/>
		      <Button android:id="@+id/controlcancel" android:text="取消" 
		      		  android:layout_toRightOf="@+id/controlsave"
		      		  android:layout_alignTop="@+id/controlsave"
		      		  android:layout_width="wrap_content"
		      		  android:layout_height="wrap_content"/>
		</RelativeLayout>  
    </TableLayout>
</LinearLayout>
