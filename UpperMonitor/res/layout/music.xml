<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:id="@+id/musicview">
	<TextView android:text="歌曲列表" android:gravity="center"
		android:layout_height="80px"
		android:layout_width="fill_parent" android:background="#87CEEB"
		android:textSize="12pt"
		android:textStyle="bold"
		android:textColor="#000000">
	</TextView>
	<LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView android:text="序号" 
			android:gravity="center" android:layout_width="160px"
			android:layout_height="wrap_content" android:textStyle="bold"
			>
		</TextView>
		<TextView android:text="歌手" 
			android:gravity="center" android:layout_width="160px"
			android:layout_height="wrap_content" android:textStyle="bold"
			>
		</TextView>
		<TextView android:text="歌曲名" 
			android:layout_width="wrap_content" android:gravity="center"
			android:layout_height="wrap_content" android:textStyle="bold"
			>
		</TextView>
	</LinearLayout>
<ListView android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:id="@+id/users"
		android:layout_weight="4">
	</ListView>
	<LinearLayout android:layout_width="fill_parent"
	    		  android:layout_height="80dp"
	    		  android:layout_weight="1"
	    		  android:layout_gravity="center">
        <ImageButton
		    android:id="@+id/music_forward" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:layout_marginLeft="80dip"
		    android:layout_marginTop="7dip"
		    android:background="@drawable/forward"/>
        <ImageButton
		    android:id="@+id/music_start" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:layout_marginLeft="20dip"
		    android:layout_marginTop="7dip"
		    android:background="@drawable/play"/>
        <ImageButton
		    android:id="@+id/music_next" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:layout_marginLeft="20dip"
		    android:layout_marginTop="7dip"
		    android:background="@drawable/next"/>

        <ImageButton
            android:id="@+id/music_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="7dip"
            android:background="@drawable/sound" />

</LinearLayout>
</LinearLayout>
